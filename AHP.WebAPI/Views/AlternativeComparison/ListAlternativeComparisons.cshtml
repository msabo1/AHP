@model IEnumerable<AHP.WebAPI.Models.AlternativeComparisonMvcModel>

@{
    ViewBag.Title = "ListAlternativeComparisons";
}

<h2>ListAlternativeComparisons</h2>

<p>
    @Html.ActionLink("Create New", "Create")
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.CriteriaName)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.AlternativeName1)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.AlternativeRatio)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.AlternativeName2)
        </th>
    </tr>

@foreach (var item in Model)
{
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.CriteriaName)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.AlternativeName1)
        </td>
        <td>
            <div class="form-group">
                <div class="coll-5">
                    <label for="exampleFormControlSelect2">Example multiple select</label>
                    <select multiple class="form-control" id="exampleFormControlSelect2">
                        <option>1</option>
                        <option>2</option>
                        <option>3</option>
                        <option>4</option>
                        <option>5</option>
                    </select>
                </div>
            </div>
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.AlternativeName2)
        </td>
    </tr>
    }
</table>

<div>
    @Html.ActionLink("Prev", "ListAlternativeComparisons", "AlternativeComparison", new { page = ((int)Session["Page"] - 1) }, null) |
    @Html.ActionLink("Next", "ListAlternativeComparisons", "AlternativeComparison", new { page = ((int)Session["Page"] + 1) }, null)
</div>
<div>
    @Html.ActionLink("Choices", "ListChoices", "LoggedIn", new { page = 1 }, null)
</div>

